<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include('../layout/_head.ejs')%>
</head>

<body>

    <div id="wrap">

        <%- include('../layout/_header.ejs')%>

            <div id="container-block">

                <%- include('../layout/_sidebar.ejs')%>

                <main id="content" role="main">

                    <!-- 컨텐츠 시작 -->
                    <h2 class="title">거래처 관리</h2>
                    <div class="p-3 border-bottom">
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                <div class="d-flex align-items-center">
                                    <select name="" id="" class="custom-select w-auto mr-2">
                                        <option value="">구분</option>
                                    </select>
                                    <select name="" id="" class="custom-select w-auto">
                                        <option value="">거래처</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-auto">
                                <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modal-customer-add">등록</button>
                            </div>
                        </div>
                    </div>
                    <div class="section">
                        <div class="p-3">
                            <div class="row align-items-center mb-2">
                                <div class="col-auto">
                                    총 ###건
                                </div>
                                <div class="col-auto">
                                    <input type="checkbox" id="usableOnly">
                                    <label for="usableOnly" class="mb-0">사용 항목만 보기</label>
                                </div>
                            </div>
                            <div class="main_search_result_list">
                                <!-- softpuzzle에서 쓰는 datatable 고정 클래스명 -->
                                <table class="table" id="datatable1">
                                    <thead>
                                        <tr>
                                            <th class="text-center">ID</th>
                                            <th class="text-center">구분</th>
                                            <th class="text-center">거래처</th>
                                            <th class="text-center">연락처</th>
                                            <th class="text-center">접근메뉴</th>
                                            <th class="text-center">비고</th>
                                            <th class="text-center">사용</th>
                                            <th class="text-center">등록/수정</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=10; i> 0 ; i--){ %>
                                            <tr>
                                                <td class="text-center"><%= i %></td>
                                                <td class="text-center">급식처</td>
                                                <td class="text-center">
                                                    <a href="#modal-customer-add" data-toggle="modal" class="text-underline">오해피푸드(IDID)</a>
                                                </td>
                                                <td class="text-center">이급식(010-0000-0000)</td>
                                                <td class="text-center">급식관리</td>
                                                <td class="text-center">-</td>
                                                <td class="text-center">Y</td>
                                                <td class="text-center">
                                                    <div class="text-nowrap">Yy/mm/dd(김시대)</div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <%- include('../layout/_pagination.ejs')%>
                        </div>
                    </div>
                    <!-- 컨텐츠 끝 -->

                </main>

            </div>

            <%- include('../layout/_footer.ejs')%>

    </div>

    <!-- modal : 거래처 등록/수정 -->
    <div class="modal" tabindex="-1" id="modal-customer-add" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">거래처 등록/수정</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-title">거래처 정보</div>
                    <table class="table table-bordered table-fixed">
                        <colgroup>
                            <col style="width: 100px;">
                            <col>
                            <col style="width: 100px;">
                            <col>
                        </colgroup>
                        <tbody>
                            <tr>
                                <th>구분</th>
                                <td>
                                    <select name="" id="" class="custom-select">
                                        <option value="">급식처</option>
                                        <option value="">제작처</option>
                                        <option value="">기타</option>
                                    </select>
                                </td>
                                <th>사용 여부</th>
                                <td>
                                    <input type="radio" name="planUse" id="planUseY">
                                    <label for="planUseY">사용</label>
                                    <input type="radio" name="planUse" id="planUseN">
                                    <label for="planUseN">미사용</label>
                                </td>
                            </tr>
                            <tr>
                                <th>거래처명</th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <th>담당자명</th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                            </tr>
                            <tr>
                                <th>연락처</th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <th>E-mail</th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                            </tr>
                            <tr>
                                <th>주소</th>
                                <td colspan="3">
                                    <div class="row row-5">
                                        <div class="col-auto">
                                            <input type="text" class="form-control">
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-secondary">검색</button>
                                        </div>
                                        <div class="col">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>비고</th>
                                <td colspan="3">
                                    <input type="text" class="form-control">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="table-title mt-3">거래처 권한</div>
                    <table class="table table-bordered table-fixed">
                        <colgroup>
                            <col style="width: 100px">
                            <col>
                            <col style="width: 100px">
                            <col>
                        </colgroup>
                        <tbody>
                            <tr>
                                <th>관리자 접근</th>
                                <td>
                                    <input type="radio" name="adminAccessUse" id="adminAccessUseY">
                                    <label for="adminAccessUseY">사용</label>
                                    <input type="radio" name="adminAccessUse" id="adminAccessUseN">
                                    <label for="adminAccessUseN">미사용</label>
                                </td>
                                <th>관리책임자</th>
                                <td>
                                    <div class="row row-5">
                                        <div class="col">
                                            <input type="text" class="form-control">
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modal-manager-search">검색</button>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>사용자ID</th>
                                <td>
                                    <div class="row row-5">
                                        <div class="col">
                                            <input type="text" class="form-control">
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-secondary" onclick="alert('중복되는 아이디가 있습니다. \n다른 아이디로 등록 해 주세요.')">중복</button>
                                        </div>
                                    </div>
                                </td>
                                <th>비밀번호</th>
                                <td><button type="button" class="btn btn-secondary btn-block">초기화</button></td>
                            </tr>
                            <tr>
                                <th>사용기간</th>
                                <td colspan="3">
                                    <div class="row row-5 align-items-center">
                                        <div class="col">
                                            <input type="text" class="form-control form-datepicker">
                                        </div>
                                        <div class="col-auto">
                                            ~
                                        </div>
                                        <div class="col">
                                            <input type="text" class="form-control form-datepicker">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>접근메뉴</th>
                                <td colspan="3">
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modal-menu-add">등록</button>
                                </td>
                            </tr>
                            <tr>
                                <th>활동 내역</th>
                                <td colspan="3">
                                    [등록] 학원정보등록(등록) – 이시대(sdijgood) YY/MM/DD 00:00:00 <br>
                                    [추가] 급식관리(등록) – 이시대(sdijgood) YY/MM/DD 00:00:00 <br>
                                    [해제] 학원정보등록(등록) – 이시대(sdijgood) YY/MM/DD 00:00:00
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-dark">저장</button>
                    <button type="button" class="btn btn-lightgray" data-dismiss="modal">취소</button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal : 관리자 검색 -->
    <div class="modal" tabindex="-1" id="modal-manager-search" data-backdrop="static" data-overlap="true"> <!-- 중첩모달일 경우 data-overlap="true" 추가 -->
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">관리자 검색</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered table-fixed">
                        <colgroup>
                            <col style="width: 45px;">
                            <col>
                            <col>
                            <col>
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th class="text-center">직원명</th>
                                <th class="text-center">ID</th>
                                <th class="text-center">부서/직무</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center"><input type="radio" id="staff1" name="staff"></td>
                                <td class="text-center"><label for="staff1">김시대</label></td>
                                <td class="text-center">asdf1234</td>
                                <td class="text-center"></td>
                            </tr>
                            <tr>
                                <td class="text-center"><input type="radio" id="staff2" name="staff"></td>
                                <td class="text-center"><label for="staff2">이시대</label></td>
                                <td class="text-center">asdf1234</td>
                                <td class="text-center"></td>
                            </tr>
                            <tr>
                                <td class="text-center"><input type="radio" id="staff3" name="staff"></td>
                                <td class="text-center"><label for="staff3">박시대</label></td>
                                <td class="text-center">asdf1234</td>
                                <td class="text-center"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-dark">저장</button>
                    <button type="button" class="btn btn-lightgray" data-dismiss="modal">취소</button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal : 메뉴 등록 -->
    <div class="modal" tabindex="-1" id="modal-menu-add" data-backdrop="static" data-overlap="true"> <!-- 중첩모달일 경우 data-overlap="true" 추가 -->
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">메뉴 등록</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="menu-list">
                        <div class="overflow-y-scroll">
                            <ul class="all-list">
                                <li>
                                    <span>학원 운영</span>
                                    <ul class="dep2">
                                        <li>
                                            <span>학원코드</span>
                                            <ul class="dep3">
                                                <li><a href="">학원정보등록</a></li>
                                                <li><a href="">과목 관리</a></li>
                                                <li><a href="">관 운영계획</a></li>
                                                <li><a href="">강사 등록</a></li>
                                                <li><a href="">거래처 관리</a></li>
                                                <li><a href="">직원 권한 관리</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <ul class="dep2">
                                        <li>
                                            <span>수강생 관리</span>
                                            <ul class="dep3">
                                                <li><a href="">수강생관리</a></li>
                                                <li><a href="">수강생리스트</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <ul class="dep2">
                                        <li>
                                            <span>신청/수납</span>
                                            <ul class="dep3">
                                                <li><a href="">수강신청관리</a></li>
                                                <li><a href="">선택교재관리</a></li>
                                                <li><a href="">출결카드관리</a></li>
                                                <li><a href="">기기대여관리</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <script>
                        //리스트 item 클릭시
                        $('#modal-menu-add .all-list a').on('click',function(e){
                            e.preventDefault();
                            $(this).toggleClass('selected');
                        });
                    </script>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-dark">저장</button>
                    <button type="button" class="btn btn-lightgray" data-dismiss="modal">취소</button>
                </div>
            </div>
        </div>
    </div>

    <script>

    </script>

</body>

</html>