                                    <button type="button" class="btn btn-sm btn-dark">취소</button>
                                </div>
                            </div>
                            <div class="row row-20">
                                <div class="col-auto">
                                    <div class="profile">
                                        <img src="../assets/images/@profile.jpg" alt="">
                                    </div>
                                    <div class="text-center mt-2">
                                        <a href="javascript:;" class="btn btn-secondary">등록</a>
                                    </div>
                                </div>
                                <div class="col">
                                    <table class="table table-fixed">
                                        <colgroup>
                                            <col style="width: 100px">
                                            <col>
                                        </colgroup>
                                        <tbody>
                                            <tr>
                                                <th>강사명</th>
                                                <td colspan="2">
                                                    <input type="text" class="form-control" value="김강사">
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>영역</th>
                                                <td colspan="2">
                                                    <select name="" id="" class="custom-select">
                                                        <option value="">입력</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>과목</th>
                                                <td colspan="2">
                                                    <div class="row row-10">
